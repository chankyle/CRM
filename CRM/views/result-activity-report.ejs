<!DOCTYPE html>
<html>

  <head>
    <link rel='stylesheet' href='https://unpkg.com/@coreui/coreui/dist/css/coreui.min.css' />
    <link rel="stylesheet" href="https://unpkg.com/@coreui/icons/css/coreui-icons.min.css">
  </head>

<body class="app sidebar-show aside-menu-show">

  <header class="app-header navbar">

<% include partials/header %>

  </header>

  <div class="app-body">

    <div class="sidebar">
      <% include partials/sidebar %>
    </div>

    <main class="main mt-2 ml-3">

      <div class="card w-75">
        <div class="card-body">

<h3> <strong>Activity Report</strong></h3>
<h4><small class="text">Agent: <u><%- agent %></u></small></h4>
<h4><small class="text">Date Range: <u><%- dateRange %></u></small></h4>

  <!-- Extracted data in Table Form -->

<div class="table-responsive">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col"></th>
        <th scope="col">DATE</th>
        <th scope="col">CLIENT</th>
        <th scope="col">CONTACT</th>
        <!-- TODO Need to implement Contact2 -->
        <th scope="col">VISIT TYPE</th>
        <th scope="col">TIME IN</th>
        <th scope="col">TIME OUT</th>
        <th scope="col">DURATION</th>
        <th scope="col">REMARKS</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <%
          var list = '';
          for (i = 0; i < result.length; i++) {
            list += '<th scope="row">' + i + '</th>';
            list += '<td>' + result[i].eventTimeIn._d + '</td>';
            list += '<td>' + result[i].clientName + '</td>';
            list += '<td>' + result[i].contact1 + '</td>';
            list += '<td>' + result[i].eventType + '</td>';
            list += '<td>' + result[i].eventTimeIn._d + '</td>';
            list += '<td>' + result[i].eventTimeOut._d + '</td>';
            list += '<td>' + result[i].eventDuration + '</td>';
            list += '<td>' + result[i].eventRemarks + '</td>';
        }
        %>
        <%- list %>
      </tr>
    </tbody>
  </table>
</div>


<!-- Back Button to return to filter page -->
        <div class="form-row">
          <div class="form-group col">
            <button type="button" class="btn btn-primary" onclick="goBack()">Back</button>
          </div>
        </div>
        <script>
          function goBack() {
            window.history.back();
          }
        </script>
      </div>
    </div>

    </main>

    <aside class="aside-menu-hidden">
      <!-- Aside menu content here -->
    </aside>

  </div>
  <footer class="app-footer">
    <% include partials/footer %>
  </footer>
</body>

</html>
