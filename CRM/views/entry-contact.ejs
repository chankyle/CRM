<!doctype html>
<html lang="en">
 <head>
 <!-- Required meta tags -->
 <meta charset="utf-8">
 <meta name="viewport" content="width=device-width, initial-scale=1">

 <!-- CoreUI CSS -->
 <link rel="stylesheet" href="https://unpkg.com/@coreui/coreui@3.0.0-rc.0/dist/css/coreui.min.css" crossorigin="anonymous">
 <link rel="stylesheet" href="https://unpkg.com/@coreui/icons@1.0.0/css/all.min.css">

 <title>CRM - Contact Entry</title>
 </head>
 <body class="c-app">

   <div class="c-sidebar c-sidebar-light c-sidebar-fixed c-sidebar-lg-show" id="sidebar">
     <% include partials/sidebar %>
   </div>

  <div class="c-wrapper">
    <header class="c-header c-header-dark bg-primary c-header-fixed">
      <!-- Header content here -->
      <% include partials/header %>
    </header>
    <div class="c-body">
      <main class="c-main">
        <!-- Main content here -->
        <main class="main mt-2 mx-3">
          <form id="formAddContact" name="addContact" method="post" action="/addContact">
          <div class="card  w-auto">
            <h3 class="card-header">Contact Information</h3>
            <div class="card-body">

          <div class="form-group">
                <label for="clientID">Client</label>
                <select class="form-control" name="clientID" required>
            		<%
                  	var list = '<option value="" disabled selected>Select</option>';
                  	for (i = 0; i < clientList.length; i++) {
                  		list += '<option>' + clientList[i].clientName + '</option>';
                  	}
            		%>
                	<%- list %>
          	  </select>
          </div>



          <!-- Contact Name-->
          <div class="form-group">
            <label for="clientPhone">Contact Name</label>
              <div class="form-row">
          			<div class="col-auto">
          			  <input type="text" class="form-control" id="contactFirstName" name="contactFirstName" placeholder="First Name" required>
          			</div>
          			<div class="col-auto">
          			  <input type="text" class="form-control" id="contactLastName" name="contactLastName" placeholder="Last Name" required>
          			</div>
          	</div>
          </div>

          <!-- Contact Position-->
          <div class="form-group">
            <label for="clientPhone">Position</label>
              <div class="form-row">
          			<div class="col-auto">
          			  <input type="text" class="form-control" id="contactPosition" name="contactPosition" placeholder="Position" required>
          			</div>
          	</div>
          </div>

           <!-- Contact Numbers-->
          <div class="form-group">
            <label for="clientPhone">Contact Numbers</label>
              <div class="form-row">
          			<div class="col-auto">
          			  <input type="text" class="form-control" id="contactPhone" name="contactPhone" placeholder="Phone Number" required>
          			</div>
          			<div class="col-auto">
          			  <input type="text" class="form-control" id="contactMobile" name="contactMobile" placeholder="Mobile Number">
          			</div>
          	</div>
          </div>

          <!-- Contact Email Address-->
          <div class="form-group">
            <label for="inputAddress">Email Address</label>
              <div class="form-row">
          			<div class="col-auto">
          			  <input type="email" class="form-control" id="contactEmail" name="contactEmail" placeholder="user@email.com" required>
          			</div>
          	</div>
          </div>

          <!-- Contact Notes-->
          <div class="form-group">
            <label for="inputAddress2">Notes</label>
              <div class="form-row">
          		<div class="col">
          			<textarea class="form-control" name="contactNotes" rows="3" placeholder="Remarks"></textarea>
          		</div>
          	</div>
          </div>

          <input class="btn btn-primary" type="submit" value="Submit">
          </form>
        </div>
      </div>
        </main>
      </main>
    </div>
    <footer class="c-footer">
      <!-- Footer content here -->
      <h1>Footer Content</h1>
    </footer>
  </div>

  <!-- Optional JavaScript -->
 <!-- Popper.js first, then CoreUI JS -->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.15.0/umd/popper.min.js" integrity="sha384-L2pyEeut/H3mtgCBaUNw7KWzp5n9&#43;4pDQiExs933/5QfaTh8YStYFFkOzSoXjlTb" crossorigin="anonymous"></script>
 <script src="https://unpkg.com/@coreui/coreui@3.0.0-rc.0/dist/js/coreui.min.js"></script>
 </body>
</html>
