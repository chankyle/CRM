  <div class="form-group">
    <label for="contactName">Contact Name</label>
    <textarea class="form-control" id="contactName" name="contactName" rows="1"></textarea>
  </div>

    <div class="form-group">
    <label for="contactPosition">Contact Position</label>
    <textarea class="form-control" id="contactPosition" name="contactPosition" rows="1"></textarea>
  </div>

    <div class="form-group">
    <label for="contactPhone">Contact Phone</label>
    <textarea class="form-control" id="contactPhone" name="contactPhone" rows="1"></textarea>
  </div>

  <div class="form-group">
    <label for="contactMobile">Contact Mobile</label>
    <textarea class="form-control" id="contactMobile" name="contactMobile" rows="1"></textarea>
  </div>

  <div class="form-group">
    <label for="contactEmail">Email address</label>
    <input type="email" class="form-control" id="contactEmail" name="contactEmail" placeholder="royce@diversys.com">
  </div>

  <div class="form-group">
    <label for="contactNotes">Contact Notes</label>
    <textarea class="form-control" id="contactNotes" name="contactNotes" rows="3"></textarea>
  </div>


<input class="btn btn-primary" type="submit" value="Submit">
</form>

