<!-- Contact Name-->
<div class="form-group">
  <label for="clientPhone">Contact Name</label>
    <div class="form-row">
			<div class="col-auto">
			  <input type="text" class="form-control" id="contactFirstName" name="contactFirstName" placeholder="First Name">
			</div>
			<div class="col-auto">
			  <input type="text" class="form-control" id="contactLastName" name="contactLastName" placeholder="Last Name">
			</div>
	</div>
</div>
  
<!-- Contact Position-->
<div class="form-group">
  <label for="clientPhone">Position</label>
    <div class="form-row">
			<div class="col-auto">
			  <input type="text" class="form-control" id="contactPosition" name="contactPosition" placeholder="Position">
			</div>
	</div>
</div>  
  
 <!-- Contact Numbers-->
<div class="form-group">
  <label for="clientPhone">Contact Numbers</label>
    <div class="form-row">
			<div class="col-auto">
			  <input type="text" class="form-control" id="contactPhone" name="contactPhone" placeholder="Phone Number">
			</div>
			<div class="col-auto">
			  <input type="text" class="form-control" id="contactMobile" name="contactMobile" placeholder="Mobile Number">
			</div>
	</div>
</div>

<!-- Contact Email Address-->
<div class="form-group">
  <label for="inputAddress">Email Address</label>
    <div class="form-row">
			<div class="col-auto">
			  <input type="email" class="form-control" id="contactEmail" name="contactEmail" placeholder="user@email.com">
			</div>
	</div>
</div>

<!-- Contact Notes-->
<div class="form-group">
  <label for="inputAddress2">Notes</label>
    <div class="form-row">
		<div class="col-md-4">
			<textarea class="form-control" name="contactNotes" rows="3" placeholder="Remarks"></textarea>
		</div>
	</div>
</div>

<input class="btn btn-primary" type="submit" value="Submit">
</form>

</main>



